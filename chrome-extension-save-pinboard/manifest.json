{
  "manifest_version": 3,
  "name": "Pinboard Saver",
  "version": "1.0",
  "description": "Save bookmarks to Pinboard.in",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://api.pinboard.in/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Save to Pinboard"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}